@model InsuranceAgency.Domain.Entities.Client
@{
    ViewData["Title"] = "Редактировать клиента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>✏️ Редактировать клиента: @Model.FullName</h2>
        <p class="text-muted mb-0">Обновите информацию о клиенте. Все изменения будут сохранены в базе данных</p>
    </div>
    <a href="@Url.Action("Clients", "Agent")" class="btn btn-outline-secondary">← Назад к списку</a>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form method="post" asp-action="EditClient" asp-route-id="@Model.Id" asp-antiforgery="true" class="mt-4">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">ФИО *</label>
            <input type="text" name="FullName" class="form-control" value="@Model.FullName" required />
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["FullName"] != null)
            {
                <span class="text-danger">@ViewData.ModelState["FullName"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
            }
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Email *</label>
            <input type="email" name="Email" class="form-control" value="@Model.Email" required />
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Email"] != null)
            {
                <span class="text-danger">@ViewData.ModelState["Email"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Телефон</label>
            <input type="tel" name="Phone" class="form-control" value="@Model.Phone" />
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Phone"] != null)
            {
                <span class="text-danger">@ViewData.ModelState["Phone"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
            }
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Паспорт</label>
            <input type="text" name="Passport" class="form-control" value="@Model.Passport" />
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Passport"] != null)
            {
                <span class="text-danger">@ViewData.ModelState["Passport"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
            }
        </div>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a href="@Url.Action("Clients", "Agent")" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

