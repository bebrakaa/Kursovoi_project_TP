@{
    ViewData["Title"] = ViewBag.Title ?? "Новость";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary mb-3">← Назад на главную</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <article class="card shadow-sm">
            <div class="card-body">
                <div class="mb-3">
                    <span style="font-size: 2rem;">@ViewBag.Icon</span>
                    <h1 class="d-inline ms-2">@ViewBag.Title</h1>
                </div>
                <p class="text-muted mb-4">
                    <small>Опубликовано: @ViewBag.Date</small>
                </p>
                <div class="news-content">
                    @Html.Raw(ViewBag.Content)
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Вернуться на главную</a>
                </div>
            </div>
        </article>
    </div>
</div>

